{
  "manifest_version": 3,
  "name": "No Shorts",
  "version": "1.0",
  "description": "Hides YouTube Shorts to promote focus on long-form content.",
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}